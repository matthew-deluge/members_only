<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>

  <body>
    <% if flash[:notice] %>
        <div class="notification is-primary is-light global-notification" >
          <p class="notice"> <%= notice %> </p>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="notification is-danger is-light global-notification" >
          <p class="alert"> <%= alert %> </p>
        </div>
      <% end %>

<nav class="navbar is-black" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5 has-text-white-ter">Members Only</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <% if user_signed_in? %>
          <%= link_to current_user.username, edit_user_registration_path, class: "button is-black"%>
        <div class="buttons">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-light"%>
        </div>
        <% else %>
          <div class="buttons">
              <%= link_to "Sign Up", new_user_registration_path, class:"button has-background-grey has-text-white-ter" %>
              <%= link_to "Log In", new_user_session_path, class:"button is-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>


<footer class="footer has-background-white">
  <div class="content has-text-centered">
    <p>
      <strong>Members Only</strong> by <a href="https://github.com/matthew-deluge">Matthew_Deluge</a>.
    </p>
  </div>
</footer>
</html>
