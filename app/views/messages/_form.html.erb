<div class="title is-one">
    Share Your Secret
  </div>
<%= simple_form_for(@message) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title:", input_html: { class: "input "}, wrapper: false, label_html: {class: "label"}, placeholder: "Write it here...", autofocus: true %>
    <%= f.input :body, label: "Message:", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Write it here...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-black" %>
<% end %>

