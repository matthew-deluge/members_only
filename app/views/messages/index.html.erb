<p id="notice"><%= notice %></p>

<div class='column is-half is-offset-one-quarter'>
  <% if user_signed_in?%>
    <article class='media box'>
      <div class="media-content">
        <%= render "messages/form" %>
      </div>
    </article>
  <% else %>
    <div class="title">
      Only members can share and see who shared...
    </div>
  <% end %>

<% @messages.each do |message| %>
<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <p class="title is-5"><%=message.title%></p>
          <p><%=message.body%></p>
          <% if user_signed_in?%>
            <p><em><%="by #{message.user.username}" %></em><p>
          <% end %>
        </p>
      </div>
    </div>
    <nav class="level">
      <div class="level-left is-mobile">
        <%= link_to message, class: "level-item" do %>
          <span class="icon has-text-info"><i class="fas fa-info-circle" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to edit_message_path(message), class: "level-item" do %>
          <span class="icon"><i class="fas fa-pencil" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to message, method: :delete, data: { confirm: "Are you sure you want to delete this message?" } do %>
          <span class="icon"><i class="fas fa-trash-o" aria-hidden="true"></i></span>
        <% end %>
      </div>
    </nav>
    
  </article>
</div>
<% end %>

