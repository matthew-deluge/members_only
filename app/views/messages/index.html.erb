<p id="notice"><%= notice %></p>

<div class='column is-half is-offset-one-quarter'>
  <article class='media box'>
    <div class="media-content">
      <%= render "messages/form" %>
    </div>
  </article>

<% @messages.each do |message| %>
<div class="box">
  <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src='https://bulma.io/images/placeholders/64x64.png'>
          </figure>
        </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%=message.title%></strong> 
          <%=message.user.username%>
          <br>
          <%=message.body%>
        </p>
      </div>
    </div>
    <nav class="level">
      <div class="level-left is-mobile">
        <%= link_to message, class: "level-item" do %>
          <span class="icon has-text-info"><i class="fas fa-info-circle" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to edit_message_path(message), class: "level-item" do %>
          <span class="icon"><i class="fas fa-pencil" aria-hidden="true"></i></span>
        <% end %>
        <%= link_to message, method: :delete, data: { confirm: "Are you sure you want to delete this message?" } do %>
          <span class="icon"><i class="fas fa-trash-o" aria-hidden="true"></i></span>
        <% end %>
      </div>
    </nav>
    
  </article>
</div>
<% end %>

